{
  "name": "something",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && npm start",
    "server": "cd server && npm start",
    "build": "cd client && npm run build",
    "dev": "concurrently --kill-others \"npm run client\" \"npm run server\"",
    "start": "npm run client\" \"npm run server\"",
    "heroku-postbuild": "cd client && npm install && cd server && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "nodemonConfig": {
    "ext": "js"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  },
  "dependencies": {}
}
